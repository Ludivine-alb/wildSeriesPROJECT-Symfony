{% extends 'base.html.twig' %}

{% block title %}Serie by category #{{ category.id }} {% endblock %}

{% block body %}
    <div class="media">
        <h1> 3 série de la catégorie - {{ category.name }} : </h1>
        {% for program in programs %}
            <div class="media-body">
                <h2 class="mt-0"> - {{ program.id }} /{{ program.title }}</h1>
                <p> - {{ program.synopsis }}</p>
                <a href="{{ path('program_show',  {id : program.id}) }}">Voir la fiche</a>
            </div>
    </div>
    {% else %}
    Aucune série trouvée dans cette catégorie.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}