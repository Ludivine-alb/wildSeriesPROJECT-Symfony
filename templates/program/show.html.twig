{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }} {% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Saisons : {% for season in seasons %}<a class="navlink" href="{{ path('program_season_show', { program: program.id, season: season.id }) }}">{{ season.number }}</a> {% endfor %}</p>
            <p>Categorie : {{ program.category.name }}</p>
        </div>
    </div>
    <strong>Acteurs :</strong>
<ul>
    {% for actor in program.actors %}
        <li><a href="{{ path('actor_show', { actorId : actor.id }) }}">{{ actor.name }}</li>
    {% else %}
        <li>Aucun acteur pour cette série</li>
    {% endfor %}
</ul>

    <a class="navlink" href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}